<div class="page-header">
  <h1>
    Available days
    <a href="/available_days/new" class="btn btn-lg btn-success">New Available day</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Listing</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>

      <% @available_days.each do |available_day| %>
      <tr>
        <td><%= available_day.date %></td>
        <td><%= available_day.listing_id %></td>
        <td><%= available_day.price %></td>
        <td>
          <a href="/available_days/<%= available_day.id %>" class="btn btn-primary">Show</a>
          <a href="/available_days/<%= available_day.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_available_day/<%= available_day.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
